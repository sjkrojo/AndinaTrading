 <div class="container mt-5">
        <h1 class="text-center">{{data.message}}</h1>
        <h2 class="text-center">CRUD de Empresa y Stock</h2>

        <div class="col-md-4">
            <h4>Empresas Disponibles</h4>
            <form action="/api/companies/deletecompany/{{data.user.id}}" method="post">
                <select class="form-select mb-3" name="eliminar" required>
                    <option selected disabled>Seleccione una empresa</option>
                    {{#each data.companies}}
                         <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn btn-lg btn-primary">Eliminar</button>
            </form>
        </div>
        
        <div class="col-md-4">
            <h4>Editar Empresa</h4>
            <form action="/api/companies/editcompany/{{data.user.id}}" method="post">
                <select class="form-select mb-3" name="editar" required>
                    <option selected disabled>Seleccione una empresa</option>
                    {{#each data.companies}}
                         <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn btn-lg btn-primary">Editar</button>
            </form>
        </div>

        <div class="col-md-4">
            <h4>Mostrar Empresa</h4>
            <form action="/api/companies/showcompany/{{data.user.id}}" method="post">
                <select class="form-select mb-3" name="mostrar" required>
                    <option selected disabled>Seleccione una empresa</option>
                    {{#each data.companies}}
                         <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn btn-lg btn-primary">Seleccionar</button>
            </form>
        </div>

        <div class="col-md-4">
        <h3>{{data.companyshow.id}}</h3>
        <h3>{{data.companyshow.name}}</h3>
        <p>{{data.companyshow.country}}</p>
        <p>{{data.companyshow.city}}</p>
        <h4>{{data.companyshow.stockDTO.id}}</h4>              
        <h4>{{data.companyshow.stockDTO.name}}</h4>   
        <p>{{data.companyshow.stockDTO.description}}</p>   
        <p>{{data.companyshow.stockDTO.description}}</p>   
        <p>{{data.companyshow.stockDTO.date}}</p>   
        <p>{{data.companyshow.stockDTO.amountSold}}</p>   
        <p>{{data.companyshow.stockDTO.inStorage}}</p>   
        </div>

        <form action="{{#unless data.company.id}}/api/companies/createcompany/{{data.user.id}}{{else}}/api/companies/update/{{data.user.id}}{{/unless}}" method="post">
            <h4>Valores de la Empresa</h4>
            <div class="mb-3">
                <label for="name" class="form-label">Nombre de la Empresa</label>
                <input type="text" class="form-control" id="name" name="company_name" value="{{data.company.name}}" placeholder="Ingrese el nombre de la empresa" required>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">País</label>
                <input type="text" class="form-control" id="country" name="company_country" value="{{data.company.country}}" placeholder="Ingrese el país" required>
            </div>
            <div class="mb-3">
                <label for="city" class="form-label">Ciudad</label>
                <input type="text" class="form-control" id="city" name="company_city" value="{{data.company.city}}" placeholder="Ingrese la ciudad" required>
            </div>
            <h4>Valores de Stock</h4>
            <div class="mb-3">
                <label for="stockName" class="form-label">Nombre del Producto</label>
                <input type="text" class="form-control" id="stockName" name="product_name" value="{{data.company.stockDTO.name}}" placeholder="Ingrese el nombre del producto" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Descripción</label>
                <textarea class="form-control" id="description" name="product_description" placeholder="Ingrese la descripción" required>{{data.company.stockDTO.description}}</textarea>
            </div>
            <div class="mb-3">
                <label for="value" class="form-label">Valor</label>
                <input type="number" class="form-control" id="value" name="product_value" value="{{data.company.stockDTO.value}}" placeholder="Ingrese el valor" required>
            </div>
            <div class="mb-3">
                <label for="inStorage" class="form-label">En Almacenamiento</label>
                <input type="number" class="form-control" id="inStorage" name="product_in_storage" value="{{data.company.stockDTO.inStorage}}" placeholder="Ingrese la cantidad en almacenamiento" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">{{#unless data.company.id}}Crear{{else}}Actualizar{{/unless}}</button>
        </form>

            <form action="/firstmodule/{{data.user.id}}" method="POST">
        <button type="submit" class="btn btn-primary m-2">Volver</button>
    </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>