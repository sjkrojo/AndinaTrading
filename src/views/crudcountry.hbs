 <div class="container mt-5">
        <h1 class="text-center">{{data.message}}</h1>
        <h2 class="text-center">CRUD de Paises y Ciudades</h2>

        <div class="col-md-4">
            <h4>Paises Disponibles</h4>
            <form action="/api/countries/deletecountry/{{data.user.id}}" method="post">
                <select class="form-select mb-3" name="eliminar" required>
                    <option selected disabled>Seleccione un pais y su ciudad</option>
                    {{#each data.countries}}
                         <option value="{{id}}">{{countryName}}, {{cityName}}</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn btn-lg btn-primary">Eliminar</button>
            </form>
        </div>
        
        <div class="col-md-4">
            <h4>Editar Pais y Ciudad</h4>
            <form action="/api/countries/editcountry/{{data.user.id}}" method="post">
                <select class="form-select mb-3" name="editar" required>
                    <option selected disabled>Seleccione un pais y su ciudad</option>
                    {{#each data.countries}}
                         <option value="{{id}}">{{countryName}}, {{cityName}}</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn btn-lg btn-primary">Editar</button>
            </form>
        </div>

        <div class="col-md-4">
            <h4>Mostrar Pais y Ciudad</h4>
            <form action="/api/countries/showcountry/{{data.user.id}}" method="post">
                <select class="form-select mb-3" name="mostrar" required>
                    <option selected disabled>Seleccione un pais y su ciudad</option>
                    {{#each data.countries}}
                         <option value="{{id}}">{{countryName}}, {{cityName}}</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn btn-lg btn-primary">Seleccionar</button>
            </form>
        </div>

        <div class="col-md-4">
        <h3>{{data.countryshow.id}}</h3>
        <h3>{{data.countryshow.countryName}}</h3>
        <p>{{data.countryshow.cityName}}</p>
        <p>{{data.countryshow.economicSituation}}</p>
        </div>

        <form action="{{#unless data.country.id}}/api/countries/createcountry/{{data.user.id}}{{else}}/api/countries/update/{{data.user.id}}{{/unless}}" method="post">
            <h4>Valores de la Empresa</h4>

            {{#if data.country.id}}
                <div class="mb-3">
                 <label for="name" class="form-label">ID de la locación</label>
                 <input type="text" class="form-control" id="idcountry" name="idcountry" value="{{data.country.id}}" placeholder="" required readonly>
                </div>
            {{/if}}

            <div class="mb-3">
                <label for="name" class="form-label">Nombre del Pais</label>
                <input type="text" class="form-control" id="country_name" name="country_name" value="{{data.country.countryName}}" placeholder="Ingrese el nombre de la empresa" required>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">País</label>
                <input type="text" class="form-control" id="country_city" name="country_city" value="{{data.country.cityName}}" placeholder="Ingrese el país" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Descripción de la situación economica</label>
                <textarea class="form-control" id="country_description" name="country_description" placeholder="Ingrese la descripción" required>{{data.country.economicSituation}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary w-100">{{#unless data.country.id}}Crear{{else}}Actualizar{{/unless}}</button>
        </form>

            <form action="/firstmodule/{{data.user.id}}" method="POST">
        <button type="submit" class="btn btn-primary m-2">Volver</button>
    </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>