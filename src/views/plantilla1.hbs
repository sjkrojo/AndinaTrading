<div class="container mt-5">
    <div class="row">
        
        <!-- Panel Izquierdo -->
        <div class="col-md-4">
            <h4>Votaciones Disponibles</h4>
            <form action="/activarvotacion/{{id}}" method="post">
                <select class="form-select mb-3" name="votacion" required>
                    <option selected disabled>Seleccione una votación</option>
                    <option value="ruletajuvenil">Ruleta Juvenil</option>
                    <option value="ruletamateur1">Ruleta Amateur</option>
                    <option value="ruletasemipro">Ruleta Semipro</option>
                    <option value="ruletapro">Ruleta pro</option>
                    <option value="condicionantes">Condicionantes</option>
                    <option value="personajes">Personajes</option>
                    <option value="objetos">Objetos</option>
                    <option value="jueces">Jueces Público</option>
                </select>
                <button type="submit" class="btn btn-primary">Activar Votación</button>
            </form>
        </div>

        <!-- Panel Central -->
        <div class="col-md-4">
            <h4>Ruletas Disponibles</h4>
            <form action="/activarruleta/{{id}}" method="post" class="mb-3">
                <select class="form-select mb-3" name="ruleta" required>
                    <option selected disabled>Seleccione una ruleta</option>
                    <option value="ruletajuvenil">Ruleta Juvenil</option>
                    <option value="ruletaamateur1">Ruleta Amateur</option>
                    <option value="ruletasemipro">Ruleta Semipro</option>
                    <option value="ruletapro">Ruleta pro</option>
                </select>
                <button type="submit" class="btn btn-success">Activar Ruleta</button>
            </form>
        <button id="botonEvento" class="btn btn-primary m-2">Girar ruleta</button>

            
            <div class="mt-3">
                <form action="/activarvotacionjueces/{{id}}" method="post" class="d-inline">
                    <button type="submit" class="btn btn-info">Votación Jueces</button>
                </form>
                <form action="/cerrarvotaciones/{{id}}" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">Cerrar Votaciones</button>
                </form>
            </div>
        </div>

        <!-- Panel Derecho -->
        <div class="col-md-4">
            <h4>Ingreso de Cédula</h4>
            <form action="/buscar-y-actualizar-por-cedula/{{id}}" method="post">
                <input type="text" class="form-control mb-3" placeholder="Ingrese su cédula" name="cedula" required>
                <button type="submit" class="btn btn-primary">Enviar Información</button>
            </form>
        </div>
    </div>

    <form action="/menuadmin/{{id}}" method="GET">
        <button type="submit" class="btn btn-danger m-2">Atrás</button>
    </form>
