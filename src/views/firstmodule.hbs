<style>
    /* Definimos las variables para los colores */
    :root {
        --blue-color: #007bff;
        --red-color: #dc3545;
        --yellow-color: #ffc107;
        --green-color: #28a745;
        --purple-color: #6f42c1;
        --orange-color: #ff6600;
        --highlight-color: #ff9900; /* Naranja claro para el hover */
        --background-color: #f5f1f1; /* Fondo claro */
        --card-body-background: #d8d4d4; /* Fondo de tarjetas */
    }

    /* Estilo general de la página */
    body {
        background-color: var(--background-color);
    }

    /* Estilo de la tarjeta */
    .card {
        background-color: var(--card-body-background);
        border-radius: 0.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        margin: auto;
    }

    /* Encabezado en negrilla */
    .card-title {
        color: var(--orange-color);
        font-weight: bold;
        text-align: center;
        margin-bottom: 1rem;
    }

    /* Colores para los botones */
    .btn-blue {
        background-color: var(--blue-color);
        border-color: var(--blue-color);
        color: white;
    }

    .btn-blue:hover {
        background-color: #0056b3;
    }

    .btn-red {
        background-color: var(--red-color);
        border-color: var(--red-color);
        color: white;
    }

    .btn-red:hover {
        background-color: #c82333;
    }

    .btn-yellow {
        background-color: var(--yellow-color);
        border-color: var(--yellow-color);
        color: black;
    }

    .btn-yellow:hover {
        background-color: #e0a800;
    }

    .btn-green {
        background-color: var(--green-color);
        border-color: var(--green-color);
        color: white;
    }

    .btn-green:hover {
        background-color: #218838;
    }

    .btn-purple {
        background-color: var(--purple-color);
        border-color: var(--purple-color);
        color: white;
    }

    .btn-purple:hover {
        background-color: #5a32a3;
    }

    .btn-orange {
        background-color: var(--orange-color);
        border-color: var(--orange-color);
        color: white;
    }

    .btn-orange:hover {
        background-color: var(--highlight-color);
    }

</style>

<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow">
        <h3 class="card-title text-center mb-4">Andina Trading   Menú de Módulos</h3>
        
        <!-- Módulo de Gestión de Empresas Participantes -->
        <form action="/api/companies/crud/{{user.id}}" method="post" class="mb-3">
            <button type="submit" class="btn btn-blue w-100">Gestión de Empresas Participantes</button>
        </form>
        
        <!-- Módulo de Gestión de Comisionistas -->
        <form action="/api/securityhouses/crud/{{user.id}}" method="post" class="mb-3">
            <button type="submit" class="btn btn-red w-100">Gestión de Comisionistas de Bolsa</button>
        </form>
        
        <!-- Módulo de Gestión de Inversionistas -->
        <form action="/api/investors/crud/{{user.id}}" method="post" class="mb-3">
            <button type="submit" class="btn btn-yellow w-100">Gestión de Inversionistas</button>
        </form>
        
        <!-- Módulo de Ciudades y Países -->
        <form action="/api/countries/crud/{{user.id}}" method="post" class="mb-3">
            <button type="submit" class="btn btn-green w-100">Ciudades y Países</button>
        </form>

        <!-- Módulo de Visualización de Logs -->
        <form action="/ciudades-paises" method="post" class="mb-3">
            <button type="submit" class="btn btn-purple w-100">Visualizar Logs</button>
        </form>

        <!-- Botón de Volver -->
        <form action="/menuadmin/{{user.id}}" method="POST">
            <button type="submit" class="btn btn-orange w-100">Volver</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
