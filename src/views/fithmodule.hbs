<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow" style="width: 100%; max-width: 600px;">
        <h3 class="card-title text-center mb-4">Andina Trading - Trading Contracts</h3>

        <!-- Back Button -->
        <div class="text-start mb-3">
            <a href="/" class="btn btn-secondary w-100">Back</a>
        </div>

        <div class="row">
            <!-- Panel for Selecting Trading Contracts -->
            <div class="col mb-4">
                <div class="card shadow">
                    <div class="card-header bg-info text-white text-center">
                        Select Trading Contract
                    </div>
                    <div class="card-body">
                        <form action="/api/select-trading-contract" method="POST">
                            <div class="mb-3">
                                <label for="tradingContracts" class="form-label">Choose a Trading Contract</label>
                                <select class="form-select" id="tradingContracts" name="contract" required>
                                    <option selected disabled>Select a contract</option>
                                    {{#each tradingContracts}}
                                        <option value="{{this.id}}">{{this.name}} - {{this.description}} (Value: ${{this.value}})</option>
                                    {{/each}}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Send</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Panel for Trading Contracts History (Dropdown List) -->
            <div class="col mb-4">
                <div class="card shadow">
                    <div class="card-header bg-success text-white text-center">
                        Trading Contracts History
                    </div>
                    <div class="card-body">
                        <form action="/api/select-history-contract" method="POST">
                            <div class="mb-3">
                                <label for="historyContracts" class="form-label">Select Contract from History</label>
                                <select class="form-select" id="historyContracts" name="historyContract" required>
                                    <option selected disabled>Select a contract</option>
                                    {{#each historyContracts}}
                                        <option value="{{this.id}}">{{this.name}} - {{this.status}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">View History</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Panel for Information about Selected Trading Contract -->
            <div class="col mb-4">
                <div class="card shadow">
                    <div class="card-header bg-warning text-white text-center">
                        Contract Information
                    </div>
                    <div class="card-body">
                        <form action="/api/accept-deny-contract" method="POST">
                            <input type="hidden" name="contractId" value="{{selectedContract.id}}">
                            <p><strong>Contract Name:</strong> {{selectedContract.name}}</p>
                            <p><strong>Description:</strong> {{selectedContract.description}}</p>
                            <p><strong>Value:</strong> ${{selectedContract.value}}</p>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="decision" id="accept" value="accept" required>
                                <label class="form-check-label" for="accept">Accept</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="decision" id="deny" value="deny" required>
                                <label class="form-check-label" for="deny">Deny</label>
                            </div>
                            <button type="submit" class="btn btn-lg btn-primary w-100 mt-2">Submit Decision</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>