<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow" style="width: 100%; max-width: 400px;">
        <h3 class="card-title text-center mb-4">Andina Trading - Menú de Módulos</h3>
        
        <!-- Módulo Gestión del Sistema -->
        <form action="/firstmodule" method="get" class="mb-3">
            <button type="submit" class="btn btn-primary w-100">1. Gestión del Sistema</button>
        </form>
        
        <!-- Módulo de Conexión con la Bolsa de Valores -->
        <form action="/conexionBolsaValores" method="post" class="mb-3">
            <button type="submit" class="btn btn-secondary w-100">2. Conexión con la Bolsa de Valores</button>
        </form>
        
        <!-- Módulo de Recepción de Inversionistas y Contratos de Negociación -->
        <form action="/recepcionInversionistas" method="post" class="mb-3">
            <button type="submit" class="btn btn-success w-100">3. Recepción de Inversionistas y Contratos de Negociación</button>
        </form>
        
        <!-- Portal del Inversionista -->
        <form action="/portalInversionista" method="post" class="mb-3">
            <button type="submit" class="btn btn-info w-100">4. Portal del Inversionista</button>
        </form>
        
        <!-- Módulo de Generación de Órdenes de Compra/Venta -->
        <form action="/generacionOrdenes" method="post" class="mb-3">
            <button type="submit" class="btn btn-warning w-100">5. Generación de Órdenes de Compra/Venta</button>
        </form>
        
        <!-- Módulo de Consolidación de Información -->
        <form action="/consolidacionInformacion" method="post" class="mb-3">
            <button type="submit" class="btn btn-danger w-100">6. Consolidación de Información</button>
        </form>
        
        <!-- Módulo de Reportes -->
        <form action="/reportes" method="post" class="mb-3">
            <button type="submit" class="btn btn-dark w-100">7. Reportes</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>